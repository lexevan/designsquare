<div class="col-md-4 col-md-offset-4">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: {label_html: { class: 'sr-only' }, hint_html: {class: 'h6'}}) do |f| %>
  <%= f.error_notification %>

  <% if params[:user][:role] == 'member' %>
    <%= render "member_form", :f => f %>
  <% end %>

  <% if params[:user][:role] == 'creative' %>
    <%= render "creative_form", :f => f %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
    <%= link_to "<button type='button' class='btn btn-grey'>Cancel</button>".html_safe, root_path %>
  </div>
<% end %>

  <div class="links">
    <h5> Already signed up? </h5>
    <%= render "devise/shared/links" %>
  </div>
</div>