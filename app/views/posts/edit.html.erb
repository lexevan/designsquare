<div class="col-md-6 col-md-offset-3">
<h2>Editing <%= @post.user.username %>'s Post</h2>

<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :post, required: true, autofocus: true, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Post", class: "btn" %>
  </div>
<% end %>

</div>