<div class="col-md-6 col-md-offset-3">
<h2>New Position</h2>

<%= simple_form_for @position do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name, required: true %>
    <%= f.input :title, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :description %>
    <div class="form-inline">
      <%= f.input :start_date, required: true, as: :date, start_year: Date.today.year - 1,
                                    end_year: Date.today.year - 90, discard_day: true,
                                    order: [:month, :year] %>
    </div>
    <div class="form-inline">
      <%= f.input :end_date, required: true, as: :date, start_year: Date.today.year - 1,
                                    end_year: Date.today.year - 90, discard_day: true,
                                    order: [:month, :year] %>
    </div>
    
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add position", class: "btn" %>
  </div>
<% end %>

</div>