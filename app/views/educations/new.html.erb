<div class="col-md-6 col-md-offset-3">
<h2>New Education</h2>

<%= simple_form_for @education do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :school, required: true %>
    <%= f.input :degree, required: true %>
    <%= f.input :location, required: true %>
    <%= f.input :description %>
    <div class="form-inline">
      <%= f.input :start_year, required: true, as: :date, start_year: Date.today.year - 1,
                                    end_year: Date.today.year - 90, discard_day: true, discard_month: true,
                                    order: [:year] %>
    </div>
    <div class="form-inline">
      <%= f.input :end_year, required: true, as: :date, start_year: Date.today.year - 1,
                                    end_year: Date.today.year - 90, discard_day: true, discard_month: true,
                                    order: [:year] %>
    </div>
    
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add education", class: "btn" %>
  </div>
<% end %>

</div>